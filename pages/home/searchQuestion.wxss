/* pages/home/searchQuestion.wxss */

.searchView{
  width: 750rpx;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  background: white;
}

.searchLabelContainer{
  width: 550rpx;
  height: 32px;
  border-radius: 5px;
  border: 1px solid #8a8a8a;
  display: flex;
  align-items: center;
  position: relative;
}

.searchLabelContainer image{
  width: 32px; 
  height:32px;
}

.searchQuestionContainer{
  display: flex;
  flex-direction: column;
}

.emptyContainer{
  margin-top: 200rpx;
  width: 100%;
  height: 30px;
  line-height: 30px;
  text-align: center;
}

.questionCellContainer{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.questionTitle{
  font-size: 14pt;
  width: 700rpx;
  height: auto;
  word-break: break-all;
  line-height: 20px;
  margin-top: 10px;
}

.questionDetail{
  font-size: 12pt;
  width: 700rpx;
  height: auto;
  word-break: break-all;
  line-height: 20px;
  margin-top: 10px;
  color: #939393;
}
.questionImg{
  margin-top: 5px;
  width: 700rpx;
  height: 400rpx;
}

.questionLocation{
  margin-top:8px; 
  width: 700rpx;
  height:20px;
  display: flex;
}

.answerSateV{
  width: 700rpx;
  height: 40px;
  display: flex;
  align-items: center;
}