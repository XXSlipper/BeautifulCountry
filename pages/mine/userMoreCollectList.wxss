/* pages/mine/userMoreCollectList.wxss */

.newsCellContainer{
  width: 700rpx;
  display: flex;
  margin-left: 25rpx;
}
.newsCellLeft{
  width: 64%;
  height: 84px;
  margin-left: 1%;
}

image{
  overflow: hidden;
}

.newsCellRight{
  width: 35%;
  height: 84px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.newsCellRight image{
  width: 100%;
  height: 90%;
}

.newsTitleContainer{
  height:60px;
}

.newsTitle{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: keep-all;
  word-wrap: break-word;
  font-size: 14pt;
}

.newsTimeComment{
  width:100%; 
  height:24px; 
}