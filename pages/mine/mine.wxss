/* pages/mine/mine.wxss */

.sectionOne{
  height: 177px;
  width: 100%;
}

.sectionOne .nameIcon{
  height: 95px;
  width: 100%;
  display: flex;
  align-items: center;
}

.sectionOne .nameIcon view{
  height: 50px;
  width: 200px;
  margin-left: 25rpx;
}

.sectionOne .nameIcon image{
  width: 60px;
  height: 60px;
  margin-left: 25rpx;
  border-radius: 30px;
}

.sectionOne .mineList{
  height: 82px;
  width: 100%;
}

.mineListItem{
  width: 80px;
  height: 82px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.mineListItem .number{
  width: 80px;
  height: 30px;
  text-align: center;
  line-height: 30px;
  font-size: 14pt;
  font-weight: bold;
}

.mineListItem .title{
  width: 80px;
  height: 20px;
  line-height: 20px;
  font-size: 11pt;
  display: flex;
  justify-content: center;
}

.numberAddressV{
  width: 100%;
  height:93px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.numberV,.addressV,.sectionThreeCell{
  display: flex;
  width: 700rpx;
  height: 46px;
  align-items: center;
}
.leftText{
  line-height: 46px;
  width: 100px;
  font-size: 14pt;
}

.leftImg{
  width: 36px;
  height: 36px;
}

.rightText{
  font-size: 11pt;
  line-height: 46px;
}

.rightImg{
  width: 18px;
  height: 46px;
}

.sectionThreeV{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}