/* pages/mine/myLetter.wxss */

.letterContainer{
  display: flex;
  flex-direction: column;
  width: 750rpx;
  align-items: center;
}

.letterCell{
  display: flex;
  width: 700rpx;
  height: 68px;
  align-items: center;
}

.letterCell image{
  width: 50px;
  height: 50px;
  border-radius: 25px;
  background: yellow;
}

.cellRightContent{
  margin-left: 5px;
  height: 68px;
  border-style: none none solid none;
  border-width: 1px;
  border-color: #d3d3d3;
  display: flex;
  flex-direction: column;
}

.upTitleContainer{
  margin-top: 11px;
  width:100%;
  height: 20px;
  display: flex;
  justify-content: space-between;
}

.nameLab{
  height: 20px;
  width: 55%;
  font-size: 14pt;
  line-height: 20px;
}

.timeLab{
  margin-top: 6px;
  height: 16px;
  width: 40%;
  text-align: right;
  line-height: 16px;
  font-size: 10pt;
  color: #d3d3d3;
}

.subTitle{
  margin-top: 5px;
  width:100%;
  height: 20px;
  line-height: 20px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: keep-all;
  word-wrap: break-word;
  font-size: 12pt;
  color: #646464;
}