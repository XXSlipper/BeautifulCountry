  width: 100%;
  height: 30px;
  line-height: 30px;
  text-align: center;
}

.questionCellContainer{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.questionTitle{
  font-size: 14pt;
  width: 700rpx;
  height: auto;
  word-break: break-all;
  line-height: 20px;
  margin-top: 10px;
}

.questionDetail{
  font-size: 12pt;
  width: 700rpx;
  height: auto;
  word-break: break-all;
  line-height: 20px;
  margin-top: 10px;
