/* pages/release/supply.wxss */

.supplyContainer{
  display: flex;
  flex-direction: column;
  width: 750rpx;
}

.cellContainer{
  width:750rpx;
  height: 40px;
}

.cellContent{
  width: 700rpx;
  height: 100%;
  margin-left: 25rpx;
  display: flex;
  justify-content: space-around;
}

.cellLeftTitle{
  line-height: 40px;
  font-size: 14pt;
  height: 100%;
  width: 180rpx;
}

.cellRightContainer{
  display: flex;
  flex-direction: row-reverse;
  height: 100%;
  width: 500rpx;
  align-items: center;
  justify-items: center;
}

.cellRigthTitle{
  height: 40px;
  width: auto;
  line-height: 40px;
  font-size: 14pt;
  text-align: right;
}
.addPictureV{
  width: 750rpx;
  height: 165px;
}

.addPictureAlertV{
  width: 700rpx;
  line-height: 20px;
  font-size: 12pt;
  margin-left: 25rpx;
  color: #8d8d8d;
}

.pictureContainerV{
  width: 725rpx;
  height:90px;
  display: flex;
  flex-wrap:wrap;
}
.picture{
  margin-top: 25rpx;
  margin-left: 25rpx;
  width:90px;
  height:90px;
  border-radius: 8px;
  position: relative;
}

.addPicBtn{
  margin-top: 25rpx;
  margin-left: 25rpx;
  width:90px;
  height:90px;
  border-radius: 4px;
  border: 2px dashed #888888;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.detailDescriptionV{
  width: 750rpx;
  height: 80px;
}

textarea{
  width:700rpx;
  margin-left: 25rpx;
  height: 80px;
